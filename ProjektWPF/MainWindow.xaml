<Window x:Class="ProjektWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektWPF"
        mc:Ignorable="d"
        Title="Lista zadań" Height="600" Width="1000">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF4081"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E91E63"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderBrush" Value="#FF4081"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>


    <DockPanel>

        <!-- Pasek narzędzi -->
        <ToolBar DockPanel.Dock="Top" Height="62">
            <Button Content="Dodaj zadanie" Padding="5" Margin="10" Command="{Binding AddTaskCommand}" />
            <Button Content="Filtruj" Padding="5" Margin="10" Command="{Binding FilterCommand}" />
            <Button Content="Statystyki" Padding="5" Margin="10"
            Click="ShowStatistics_Click"/>
            <Button Content="Pokaż cytat motywacyjny"
            Padding="5"
            Margin="10"
            Click="FetchZenQuote_Click" />
            <TextBox Width="200" Margin="10,0,0,0" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </ToolBar>

        <!-- Pasek stanu -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding TaskSummary}" />
        </StatusBar>

        <Grid Height="479">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar: Kategorie -->
            <StackPanel Grid.Column="0" Margin="5">
                <Button Content="Kategorie" FontWeight="Bold" Command="{Binding AddCategoryCommand}" Margin="0 10 0 0"/>
                <ListBox ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         DisplayMemberPath="Name" />
                <Button Content="Wyczyść filtr" Command="{Binding ClearCategoryFilterCommand}" />

            </StackPanel>
            

            <!-- Lista zadań -->
            <ListView Grid.Column="1" Margin="10"
          ItemsSource="{Binding FilteredTasks}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Name}" IsExpanded="False" Margin="0 5 0 0">
                            <StackPanel>
                                <TextBlock Text="{Binding Description}" FontStyle="Italic" Margin="0 10 0 7"/>
                                <WrapPanel>
                                    <TextBlock Text="Kategoria: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Category.Name}" Margin="10,0,0,0"/>
                                    <TextBlock Text="|" Margin="10,0"/>
                                    <TextBlock Text="Pilność: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Priority}" Margin="10,0,0,0"/>
                                    <TextBlock Text="|" Margin="10,0"/>
                                    <TextBlock Text="Termin: " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DueDate}" Margin="10,0,0,0"/>
                                </WrapPanel>
                                <!-- Lista podzadań -->
                                <ItemsControl ItemsSource="{Binding SubTasks}" Margin="0,5,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <CheckBox IsChecked="{Binding IsDone}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Przyciski pod zadaniem -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                                    <Button Content="Edytuj"
            Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
            CommandParameter="{Binding}" />
                                    <Button Content="Usuń"
            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
            CommandParameter="{Binding}" />
                                </StackPanel>



                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </DockPanel>
</Window>
